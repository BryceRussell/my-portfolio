---
import { filterSort } from '@/util';
import type { Entry } from '@/types';

export interface Props {
    posts: Entry[];
}

const {
    posts
} = Astro.props as Props
---

<ul class="flex flex-col gap-5">
    { filterSort(posts).map((post) => {
        const {
            title,
            slug,
            package: pkg,
            description,
            date,
            tags=[]
        } = post.data
        return (
            <li>
                <a href={`/${post.collection}/${slug}`} class="text-darker font-bold">{(post.collection==="blog"?title:pkg)||slug}</a>
                <div class="flex flex-col sm:flex-row items-start gap-x-3 text-fluid-0">
                    {date && <time class="whitespace-nowrap text-grayer">{(new Date(''+date)).toDateString()}</time>}
                    {tags &&
                        <div class="flex flex-wrap gap-x-3">                            
                            {tags.map((tag) => {
                                return <a href={`/${post.collection}/tags/${tag}`}>#{tag}</a>
                            })}
                        </div>
                    }
                </div>
                {description && <p class="text-fluid-0">{description}</p>}
            </li>
        )
    })}
</ul>