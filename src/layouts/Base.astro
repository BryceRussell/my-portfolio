---
import { SEO } from "astro-seo";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import "@fontsource/roboto";
import '@/css/base.scss';

const  {
    SEO: SEOProp = {
        title: "Bryce Russell's Web Development Portfolio and Blog",
        description: "Bryce Russell's web development portfolio and blog",
        canonical: new URL(Astro.url.pathname, Astro.site),
        openGraph: {
            basic: {
                title: "Bryce Russell",
                url: new URL(Astro.url.pathname, Astro.site),
                image: "/opengraph.png",
                type: "website"
            },
            optional: {
                siteName: "Bryce",
                description: "My website about web development"
            },
            image: {
                alt: "logo"
            }
        }
    }
} = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
        <SEO {...SEOProp}/>
        <slot name="head"/>
	</head>
	<body>
		<Navbar />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>