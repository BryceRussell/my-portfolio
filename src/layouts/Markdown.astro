---
import { SEO } from "astro-seo";
import { Icon } from 'astro-icon'
import { CodeCopy, IconSwitch } from 'astro-headless-ui';
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import "@fontsource/roboto";
import '@/css/markdown.scss'

const {
	data
} = Astro.props as any

const {
	seoTitle,
	seoDescription,
	title,
	description
} = data

const canonical = ''+(new URL(Astro.url.pathname, Astro.site));

const _SEO = {
	title: seoTitle || title || "Bryce Russell's Web Development Portfolio and Blog",
	description: seoDescription || description || "Bryce Russell's web development portfolio and blog",
	canonical: canonical,
	openGraph: {
		basic: {
			title: "Bryce Russell",
			url: canonical,
			image: "/og.png",
			type: "website"
		},
		optional: {
			siteName: "Bryce",
			description: "My website about web development"
		},
		image: {
			alt: "logo"
		}
	}
}
---

<Fragment>
	
</Fragment>

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
        <SEO {..._SEO}/>
        <slot name="head"/>
	</head>
	<body>
		<Navbar />
		<main data-pagefind-body>
            <slot />
		</main>
		<Footer />
		<CodeCopy padding=".375em" class="copy-code">
			<IconSwitch name="copy-icons" active="button.copied" size="1.5rem" style="margin-top:-1px">
				<Icon name="fluent:clipboard-20-regular"/>
				<Icon name="fluent:clipboard-task-20-regular"/>
			</IconSwitch>
		</CodeCopy>
	</body>
</html>